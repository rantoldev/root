{
  "name": "root-terminal",
  "version": "1.0.0",
  "description": "A terminal-style chat application",
  "scripts": {
    "start": "NODE_OPTIONS='--no-deprecation' npx http-server -p 8080 public",
    "build:css": "npx tailwindcss -i ./input.css -o ./public/styles.css",
    "build": "mkdir -p public && cp index.html app.js firebase-config.js matrix.js particles.js public/ && cp -r assets public/ && npm run build:css",
    "dev": "concurrently \"npm run build:css -- --watch\" \"npm start\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "concurrently": "^8.2.1"
  }
}